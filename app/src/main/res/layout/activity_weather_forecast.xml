<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherForecast">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/currentWeather"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_toRightOf="@id/currentWeather" />

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/currentWeather" />

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/currentTemp"
            android:layout_toRightOf="@id/minTemp" />

        <TextView
            android:id="@+id/uvRating"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/minTemp"

            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/uvRating"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>